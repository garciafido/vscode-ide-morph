{
	"name": "vscode-ide-morph",
	"displayName": "Morph",
	"description": "Morph language integration for VSCode",
	"icon": "images/icon_agilmind.png",
	"galleryBanner": {
		"color": "#F5F5F5",
		"theme": "light"
	},
	"author": "Fido Garcia",
	"license": "MIT",
	"version": "0.14.0",
	"publisher": "morphlang",
	"homepage": "https://morphlang.org",
	"bugs": {
		"url": "https://github.com/morphlang/vscode-ide-morph/issues",
		"email": "smcbreen@microsoft.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/morphlang/vscode-ide-morph"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"keywords": [
		"morph",
		"m",
		"functional",
		"object oriented",
		"non-imperative"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:morph",
		"workspaceContains:**/*.{m,morph}"
	],
	"main": "./out/extension",
	"enableProposedApi": true,
	"contributes": {
		"languages": [
			{
				"id": "morph",
				"aliases": [
					"Morph",
					"MorphLang"
				],
				"extensions": [
					".m",
					".morph"
				]
			}
		],
		"snippets": [
			{
				"language": "morph",
				"path": "./snippets/snippets.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"languageServerMorph.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerMorph.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && cd ./server && npm install && cd ..",
		"compile": "tsc -p .",
		"watch": "tsc -p . --watch",
		"download-api": "vscode-dts dev",
		"postdownload-api": "vscode-dts master",
		"postinstall": "npm run download-api"	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^6.2.2",
		"@types/node": "^12.11.7",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.8.3",
		"@types/vscode": "1.43.0",
		"vscode-test": "^1.3.0"
	}
}
